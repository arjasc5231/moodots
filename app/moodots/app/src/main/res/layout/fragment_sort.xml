<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottom_navigation"
    tools:context=".Sortfrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:backgroundTint="#EF534E"
            android:layout_weight="1"
            android:background="@layout/button_leftcorner"
            android:text="Day" />

        <Button
            android:id="@+id/week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:backgroundTint="#FFA726"
            android:layout_weight="1"
            android:background="@layout/button_middle"
            android:text="Week" />

        <Button
            android:id="@+id/month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:backgroundTint="#FFEE58"
            android:layout_weight="1"
            android:background="@layout/button_middle"
            android:text="Month" />

        <Button
            android:id="@+id/year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:backgroundTint="#A1A3A1"
            android:layout_weight="1"
            android:background="@layout/button_rightcorner"
            android:text="Year" />

    </LinearLayout>

</FrameLayout>